<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailMovieActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollViewDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_poster"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_movie" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_main"
                android:layout_marginTop="@dimen/dimen_main"
                android:text="Captain America Civil War"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginLeft="@dimen/dimen_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_release"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginLeft="@dimen/dimen_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dimen8"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20sp"
                android:layout_marginLeft="@dimen/dimen_main"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_description"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginLeft="@dimen/dimen_main"
                android:layout_marginRight="@dimen/dimen_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description movie"
                android:layout_marginBottom="@dimen/dimen_main"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>